<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>
              <% if (user.password) { %>
                <p>
                    <strong>id</strong>: <%= user.id %><br>
                    <strong>name</strong>: <%= user.name %><br>
                    <strong>email</strong>: <%= user.email %><br>
                </p>
              <a href="/unlink/local" class="btn btn-default">Unlink Local</a>

              <% } else { %>
              <a href="/connect/local" class="btn btn-default">Connect Local</a>
              <% } %>


            </div>
        </div>

      <!-- FACEBOOK INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
          <% if (user.facebook_token) { %>
          <p>
            <strong>id</strong>: <%= user.id %><br>
            <strong>token</strong>: <%= user.facebook_token %><br>
            <strong>email</strong>: <%= user.email %><br>
            <strong>name</strong>: <%= user.name %>
          </p>

          <a href="/unlink/facebook" class="btn btn-default">Unlink Facebook</a>
          <% } else { %>
          <a href="/connect/facebook" class="btn btn-default">Connect Facebook</a>
          <% } %>

        </div>
      </div>

      <!-- Instagram INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3 class="text-warning"><span class="fa fa-instagram"></span> Instagram</h3>
          <% if (user.insta_token) { %>
          <p>
            <strong>id</strong>: <%= user.id %><br>
            <strong>token</strong>: <%= user.insta_token %><br>
            <strong>email</strong>: <%= user.email %><br>
            <strong>name</strong>: <%= user.name %>
          </p>
          <a href="/unlink/instagram" class="btn btn-default">Unlink Instagram</a>
          <% } else { %>
          <a href="/connect/instagram" class="btn btn-default">Connect Instagram</a>
          <% } %>

        </div>
      </div>


      <!-- GOOGLE INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google</h3>
          <% if (user.google_token) { %>
          <p>
            <strong>id</strong>: <%= user.id %><br>
            <strong>token</strong>: <%= user.google_token %><br>
            <strong>email</strong>: <%= user.email %><br>
            <strong>name</strong>: <%= user.name %>
          </p>

          <a href="/unlink/google" class="btn btn-default">Unlink Google</a>

          <% } else { %>
          <a href="/connect/google" class="btn btn-default">Connect Google</a>
          <% } %>

        </div>
      </div>



      <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Add Photos</h3>
                <a href="/upload" class="btn btn-warning"> + </a>

            </div>
        </div>
      </div>

      <div>
        <div class="well">
          <h3><span class="fa fa-user"></span> Display Photos</h3>
          <strong>photos</strong>: <br>
          <div class = "row">
            <% photos.forEach(function(photo) { %>
              <img style="width: 300px; height: 200px" src = 'http://45.55.210.159/<%= photo.filepath %>'/>
            <% }); %>


          </div>

        </div>
      </div>

</div>

</body>
</html>
